<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="16dp">

        <CheckBox
            android:id="@+id/chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chocolate syrup" />

        <CheckBox
            android:id="@+id/sprinkles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprinkles" />

        <CheckBox
            android:id="@+id/crushed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crushed nuts" />

        <CheckBox
            android:id="@+id/cherries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cherries" />

        <CheckBox
            android:id="@+id/orio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orio cookie crumble" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:onClick="onShowToastButtonClicked"
        android:text="SHOW TOAST"
        android:textColor="#1b1b1b"
        android:textStyle="bold"
        app:backgroundTint="#d6d7d7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</LinearLayout>